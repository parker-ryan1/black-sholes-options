{
  "monte_carlo": {
    "simulations": 100000,
    "steps": 252,
    "use_antithetic": true,
    "random_seed": 42
  },
  "implied_vol": {
    "tolerance": 1e-6,
    "max_iterations": 100,
    "initial_guess": 0.2
  },
  "logging": {
    "level": "INFO",
    "file": "quantlib.log",
    "console": true,
    "file_output": true,
    "max_files": 5,
    "max_file_size_mb": 10
  },
  "performance": {
    "enable_logging": true,
    "enable_profiling": false,
    "profile_memory": false
  },
  "threading": {
    "enable_safety": true,
    "max_threads": 8,
    "enable_parallel_mc": true
  },
  "memory": {
    "enable_profiling": false,
    "max_usage_mb": 1024,
    "enable_leak_detection": false
  },
  "numerical": {
    "tolerance": 1e-12,
    "max_iterations": 1000,
    "use_high_precision": false
  },
  "risk": {
    "var_confidence_95": 0.95,
    "var_confidence_99": 0.99,
    "enable_stress_testing": true
  },
  "market": {
    "default_risk_free_rate": 0.05,
    "default_dividend_yield": 0.0,
    "default_volatility": 0.2
  },
  "validation": {
    "enable_parameter_checks": true,
    "warn_extreme_values": true,
    "max_volatility": 5.0,
    "max_time_to_expiry": 30.0
  }
}